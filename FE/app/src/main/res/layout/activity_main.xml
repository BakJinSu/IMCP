<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:text="IMCP"
        android:textColor="#000"
        android:textSize="70dp" />

    <ImageButton
        android:id="@+id/ib_Parents"
        android:layout_width="170dp"
        android:layout_height="170dp"

        android:layout_row="3"
        android:layout_column="1"
        android:contentDescription="ok button"
        android:scaleType="centerInside"
        android:src="@drawable/parents">

    </ImageButton>

    <ImageView
        android:id="@+id/iv_layout1"
        android:layout_width="0dp"
        android:layout_height="170dp"

        android:layout_row="5"
        android:layout_column="1"
        android:background="@android:color/transparent"
        android:contentDescription="ok button"
        android:scaleType="centerInside">

    </ImageView>

    <ImageView
        android:id="@+id/iv_layout2"
        android:layout_width="40dp"
        android:layout_height="0dp"

        android:layout_row="4"
        android:layout_column="3"
        android:background="@android:color/transparent"
        android:contentDescription="ok button"
        android:scaleType="centerInside">

    </ImageView>

    <ImageView
        android:id="@+id/iv_layout3"
        android:layout_width="40dp"
        android:layout_height="0dp"

        android:layout_row="5"
        android:layout_column="0"
        android:background="@android:color/transparent"
        android:contentDescription="ok button"
        android:scaleType="centerInside">

    </ImageView>

    <TextView
        android:id="@+id/tv_Parents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="4"

        android:layout_column="1"
        android:layout_gravity="center"
        android:text="부모"
        android:textColor="#ff55aaff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_Children"
        android:layout_width="170dp"
        android:layout_height="170dp"

        android:layout_row="3"
        android:layout_column="2"

        android:contentDescription="ok button"
        android:scaleType="centerInside"
        android:src="@drawable/children">

    </ImageButton>

    <TextView
        android:id="@+id/tv_Children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="4"

        android:layout_column="2"
        android:layout_gravity="center"
        android:text="아이"
        android:textColor="#ff55aaff"
        android:textSize="24dp"
        android:textStyle="bold" />


</GridLayout>